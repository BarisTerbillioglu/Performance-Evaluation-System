{
  "name": "performance-evaluation-frontend",
  "version": "1.0.0",
  "description": "VakıfBank Performance Evaluation System - Frontend Application",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:production": "NODE_ENV=production npm run build",
    "build:analyze": "ANALYZE_BUNDLE=true npm run build",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:unit": "jest --testPathPattern=__tests__ --testPathIgnorePatterns=integration|e2e",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:coverage": "jest --coverage --coverageReporters=text --coverageReporters=html --coverageReporters=lcov",
    "test:security": "npm audit --audit-level=high",
    "test:accessibility": "axe-core --dir=dist --report=json",
    "test:performance": "lighthouse http://localhost:4173 --output=json --output-path=./lighthouse-report.json",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "lint:strict": "eslint . --ext ts,tsx --max-warnings 0 --config .eslintrc.strict.js",
    "type-check": "tsc --noEmit",
    "type-check:strict": "tsc --noEmit --strict",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "clean": "rm -rf dist build coverage .nyc_output node_modules/.cache",
    "clean:all": "npm run clean && rm -rf node_modules package-lock.json",
    "install:clean": "npm run clean:all && npm install",
    "optimize-images": "imagemin src/assets/**/*.{jpg,jpeg,png,gif,svg} --out-dir=dist/assets",
    "generate-sw": "workbox generateSW workbox-config.js",
    "inject-sw": "workbox injectManifest workbox-config.js",
    "bundle-analyzer": "webpack-bundle-analyzer dist/stats.json",
    "analyze-bundle": "npm run build && npm run bundle-analyzer",
    "security-scan": "npm audit --audit-level=high && snyk test",
    "vulnerability-scan": "npm audit --audit-level=high",
    "dependency-check": "npm audit --audit-level=high && npm outdated",
    "update-deps": "npm update && npm audit fix",
    "update-deps:major": "npx npm-check-updates -u && npm install",
    "docker:build": "docker build -t performance-evaluation-frontend .",
    "docker:build:production": "docker build --target production -t performance-evaluation-frontend:production .",
    "docker:run": "docker run -p 8080:8080 performance-evaluation-frontend",
    "docker:push": "docker push performance-evaluation-frontend:latest",
    "docker:clean": "docker system prune -a -f",
    "deploy:staging": "npm run build:production && npm run docker:build:production && npm run docker:push",
    "deploy:production": "npm run test:ci && npm run security-scan && npm run deploy:staging",
    "start:production": "npm run build:production && npm run preview",
    "health-check": "curl -f http://localhost:4173/health || exit 1",
    "performance-test": "artillery run performance-tests/load-test.yml",
    "load-test": "artillery run performance-tests/stress-test.yml",
    "stress-test": "artillery run performance-tests/load-test.yml --config performance-tests/stress-config.yml",
    "monitor:start": "pm2 start ecosystem.config.js",
    "monitor:stop": "pm2 stop performance-evaluation-frontend",
    "monitor:restart": "pm2 restart performance-evaluation-frontend",
    "monitor:logs": "pm2 logs performance-evaluation-frontend",
    "monitor:status": "pm2 status",
    "backup:create": "tar -czf backup-$(date +%Y%m%d-%H%M%S).tar.gz dist/",
    "backup:restore": "tar -xzf backup-*.tar.gz",
    "docs:generate": "typedoc --out docs src/",
    "docs:serve": "npx http-server docs -p 8081",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "chromatic": "npx chromatic --project-token=$CHROMATIC_PROJECT_TOKEN",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "postinstall": "husky install",
    "validate": "npm run type-check && npm run lint && npm run test:unit",
    "validate:full": "npm run validate && npm run test:integration && npm run test:e2e",
    "ci": "npm run validate:full && npm run build:production && npm run security-scan",
    "release": "standard-version",
    "release:patch": "npm run release -- --release-as patch",
    "release:minor": "npm run release -- --release-as minor",
    "release:major": "npm run release -- --release-as major"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.7",
    "@hello-pangea/dnd": "^18.0.1",
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^2.9.11",
    "@radix-ui/react-dialog": "^1.0.4",
    "@radix-ui/react-dropdown-menu": "^2.0.5",
    "@radix-ui/react-select": "^1.2.2",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.1.4",
    "@radix-ui/react-tooltip": "^1.0.6",
    "@tanstack/react-query": "^4.29.0",
    "autoprefixer": "^10.4.14",
    "axios": "^1.4.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^1.2.1",
    "date-fns": "^2.30.0",
    "framer-motion": "^10.12.16",
    "html2canvas": "^1.4.1",
    "immer": "^10.1.1",
    "jspdf": "^3.0.1",
    "lodash": "^4.17.21",
    "lucide-react": "^0.263.1",
    "msw": "^2.10.5",
    "postcss": "^8.4.24",
    "react": "^18.2.0",
    "react-day-picker": "^9.9.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^4.0.11",
    "react-helmet-async": "^1.3.0",
    "react-hook-form": "^7.44.3",
    "react-hot-toast": "^2.4.1",
    "react-intersection-observer": "^9.5.2",
    "react-router-dom": "^6.8.0",
    "react-virtualized-auto-sizer": "^1.0.7",
    "react-window": "^1.8.8",
    "recharts": "^2.6.2",
    "serve": "^14.2.4",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.3.0",
    "workbox-webpack-plugin": "^7.0.0",
    "workbox-window": "^7.0.0",
    "zod": "^3.21.4",
    "zustand": "^4.3.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.35.1",
    "@storybook/addon-essentials": "^7.0.18",
    "@storybook/addon-interactions": "^7.0.18",
    "@storybook/addon-links": "^7.0.18",
    "@storybook/react": "^7.0.18",
    "@storybook/react-vite": "^7.0.18",
    "@storybook/testing-library": "^0.2.2",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/lodash": "^4.14.195",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vitejs/plugin-react": "^4.0.3",
    "artillery": "^2.0.0",
    "axe-core": "^4.7.2",
    "chromatic": "^10.0.0",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "http-server": "^14.1.1",
    "husky": "^8.0.3",
    "imagemin": "^8.0.1",
    "imagemin-cli": "^7.0.0",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-svgo": "^3.0.2",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.6.2",
    "lighthouse": "^11.2.0",
    "lint-staged": "^13.2.3",
    "npm-check-updates": "^16.10.8",
    "playwright": "^1.35.1",
    "pm2": "^5.3.0",
    "prettier": "^2.8.8",
    "rollup-plugin-visualizer": "^5.9.0",
    "snyk": "^1.1234.0",
    "standard-version": "^9.5.0",
    "terser": "^5.17.6",
    "ts-jest": "^29.1.1",
    "typedoc": "^0.24.8",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-pwa": "^0.16.4",
    "webpack-bundle-analyzer": "^4.8.0",
    "workbox-background-sync": "^7.0.0",
    "workbox-broadcast-update": "^7.0.0",
    "workbox-build": "^7.0.0",
    "workbox-cacheable-response": "^7.0.0",
    "workbox-cli": "^7.0.0",
    "workbox-expiration": "^7.0.0",
    "workbox-google-analytics": "^7.0.0",
    "workbox-navigation-preload": "^7.0.0",
    "workbox-precaching": "^7.0.0",
    "workbox-range-requests": "^7.0.0",
    "workbox-recipes": "^7.0.0",
    "workbox-routing": "^7.0.0",
    "workbox-strategies": "^7.0.0",
    "workbox-streams": "^7.0.0",
    "workbox-webpack-plugin": "^7.0.0",
    "workbox-window": "^7.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,css,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:unit"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/src/test/setup.ts"
    ],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    },
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!src/main.tsx",
      "!src/vite-env.d.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "keywords": [
    "react",
    "typescript",
    "vite",
    "performance-evaluation",
    "vakifbank",
    "enterprise",
    "dashboard",
    "analytics"
  ],
  "author": "VakıfBank Development Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vakifbank/performance-evaluation-system.git"
  },
  "bugs": {
    "url": "https://github.com/vakifbank/performance-evaluation-system/issues"
  },
  "homepage": "https://performance-evaluation.vakifbank.com",
  "funding": {
    "type": "corporate",
    "url": "https://www.vakifbank.com.tr"
  }
}
